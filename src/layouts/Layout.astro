---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = "Fravelz | Desarrollador Web Frontend | Reactjs, Astro, tailwindcss",
  description = "Desarrollador web frontend especializado en UX/UI | Minimalismo y Funcional. Portafolio con proyectos.",
  lang = "es",
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL || '';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="icon"
      type="image/png"
      href={`${baseUrl}imagenes/icono-fravelz.png`}
    />
    <link
      rel="shortcut icon"
      type="image/png"
      href={`${baseUrl}imagenes/icono-fravelz.png`}
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/FraVelz/WEB-Fravelz/refs/heads/main/imagenes/previsualizacion.png"
    />
    <meta property="og:url" content="https://fravelz.github.io/WEB-Fravelz/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://raw.githubusercontent.com/FraVelz/WEB-Fravelz/refs/heads/main/imagenes/previsualizacion.png"
    />
    <meta name="twitter:site" content="@_FraVelz" />

    <!-- SEO -->
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="desarrollador web, desarrollador full-stack, React, JavaScript, Node.js, desarrollador frontend, desarrollador backend, programador web, portafolio desarrollador"
    />

    <link rel="canonical" href="https://fravelz.github.io/WEB-Fravelz/" />

    <link
      rel="alternate"
      hreflang="es"
      href="https://fravelz.github.io/WEB-Fravelz/es"
    />
    <link
      rel="alternate"
      hreflang="en"
      href="https://fravelz.github.io/WEB-Fravelz/en"
    />
    <link
      rel="alternate"
      hreflang="ru"
      href="https://fravelz.github.io/WEB-Fravelz/ru"
    />
    <link
      rel="alternate"
      hreflang="zh"
      href="https://fravelz.github.io/WEB-Fravelz/zh"
    />

    <link rel="canonical" href={Astro.site + Astro.url.pathname} />

    <title>{title}</title>

    <script is:inline>
      (function() {
        try {
          const getSystemTheme = () =>
            window.matchMedia("(prefers-color-scheme: dark)").matches
              ? "dark"
              : "light";

          const storedTheme = localStorage.getItem("theme") || "auto";
          const finalTheme = storedTheme === "auto" ? getSystemTheme() : storedTheme;

          if (finalTheme === "dark") {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
        } catch (e) {
          // Si hay error, usar tema claro por defecto
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
</html>

<body
  class="h-fit
    scroll-smooth
    dark:bg-gradient-to-b dark:from-gray-950 dark:via-gray-900 dark:to-gray-950
    bg-gradient-to-b from-gray-50 via-white to-gray-50
    dark:text-white text-gray-900
    selection:bg-blue-500 dark:selection:bg-blue-500 selection:text-white
    min-h-screen"
>
  <style is:global>
    h1::selection,
    h2::selection,
    h3::selection,
    strong::selection {
      background-color: #a855f7;
      color: #ffffff;
    }

    ::selection {
      background-color: #079bd6ef;
      color: #ffffff;
    }
  </style>

  <slot />
</body>
