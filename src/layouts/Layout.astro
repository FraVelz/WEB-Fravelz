---
import "@/styles/global.css";

interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = "Fravelz | Desarrollador Web Frontend | Francisco Velez",
  description = "Desarrollador web frontend especializado en UX/UI | Minimalismo y Funcional. Portafolio con proyectos.",
  lang = "es",
} = Astro.props;

const baseUrl = (import.meta.env.BASE_URL || "/").replace(/([^/])$/, "$1/");
// Absolute URL for the preview image for social (og:image, twitter:image).
const ogImageUrl = `${Astro.site}images/portfolio/portfolio.png`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="icon"
      type="image/png"
      href={`${Astro.site}images/portfolio/icon-fravelz-without-border.png`}
    />
    <link
      rel="shortcut icon"
      type="image/png"
      href={`${Astro.site}images/portfolio/icon-fravelz-without-border.png`}
    />
    <link
      rel="apple-touch-icon"
      href={`${Astro.site}images/portfolio/icon-fravelz-without-border.png`}
    />

    <!-- Open Graph -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:url" content={ogImageUrl} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content="website" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:site" content="@_FraVelz" />

    <!-- SEO -->
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="desarrollador web, desarrollador full-stack, React, JavaScript, Node.js, desarrollador frontend, desarrollador backend, programador web, portafolio desarrollador"
    />

    <link rel="canonical" href="https://fravelz.github.io/WEB-Fravelz/" />
    <link rel="canonical" href={Astro.site + Astro.url.pathname} />

    <title>{title}</title>

    <!-- Base URL for i18n and assets (must load before i18n.js) -->
    <script is:inline define:vars={{ baseUrl }}>
      window.__BASE_URL__ = baseUrl;
    </script>
    <!-- i18n script: must run early to load translations -->
    <script src={`${baseUrl}i18n.js`} defer></script>

    <!-- Critical script: must run BEFORE any other script or style -->
    <script is:inline>
      (function () {
        // Run immediately, before any content is rendered
        // This script must be in <head> to prevent FOUC
        try {
          const getSystemTheme = () => {
            if (typeof window === "undefined" || !window.matchMedia)
              return "light";
            return window.matchMedia("(prefers-color-scheme: dark)").matches
              ? "dark"
              : "light";
          };

          // Read stored theme
          let storedTheme = "auto";
          try {
            storedTheme = localStorage.getItem("theme") || "auto";
          } catch (e) {
            // If localStorage is not available, use auto
            storedTheme = "auto";
          }

          const finalTheme =
            storedTheme === "auto" ? getSystemTheme() : storedTheme;

          // Apply theme immediately - this prevents unstyled content flash
          if (finalTheme === "dark") {
            document.documentElement.classList.add("dark");
            document.documentElement.setAttribute("data-theme", "dark");
          } else {
            document.documentElement.classList.remove("dark");
            document.documentElement.removeAttribute("data-theme");
          }

          // Prevenir FOUC (Flash of Unstyled Content)
          document.documentElement.style.colorScheme = finalTheme;

          // Marcar que el tema ya fue inicializado
          document.documentElement.setAttribute(
            "data-theme-initialized",
            "true",
          );
        } catch (e) {
          // Si hay error, usar tema claro por defecto
          document.documentElement.classList.remove("dark");
          document.documentElement.style.colorScheme = "light";
        }
      })();
    </script>
  </head>
</html>

<body
  class="min-h-screen w-screen
    scroll-smooth
    dark:bg-gradient-to-b dark:from-gray-950 dark:via-gray-900 dark:to-gray-950
    bg-gradient-to-b from-slate-100 via-blue-50 to-cyan-50
   dark:text-white text-slate-900"
>
  <slot />
</body>
