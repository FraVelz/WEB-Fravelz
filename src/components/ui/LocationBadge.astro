---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="
  flex items-center gap-2
  text-sm 
  text-cyan-700 dark:text-cyan-300
  max-w-fit pr-3
  bg-blue-50 dark:bg-gray-900 
  px-2 py-1 
  rounded-full
  border border-cyan-300/60 dark:border-cyan-500/40 
  hover:border-cyan-500 dark:hover:border-cyan-400/60
  transition-all 
  hover:shadow-lg hover:shadow-cyan-500/20 dark:hover:shadow-cyan-500/10
">
  <svg 
    class="text-cyan-600 dark:text-cyan-400 w-4 h-4" 
    fill="currentColor" 
    viewBox="0 0 384 512"
    aria-hidden="true"
  >
    <path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/>
  </svg>
  <span>{text}</span>
</div>
