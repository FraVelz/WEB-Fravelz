---
// Import and configuration languages
import { t, type Language, languages } from "@/utils/i18n";

const param = Astro.params.lang;

const lang: Language = languages.includes(param as Language)
  ? (param as Language)
  : "es";
---

<section id="pasatiempos" class="mt-10 w-full">
  <h2
    class="text-3xl font-bold bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent mb-2"
  >
    {t("info_hobbies_title", lang)}
  </h2>
  <ul class="cursor-default text-gray-700 dark:text-gray-300 space-y-2 list-none">
    <li class="flex items-center hover:translate-x-2 transition-transform">
      <span draggable="false" class="select-none text-cyan-500 dark:text-cyan-400 mr-3 text-lg"
        >◆</span
      >
      {t("hobbies_exercise", lang)}
    </li>
    <li class="flex items-center hover:translate-x-2 transition-transform">
      <span draggable="false" class="select-none text-purple-500 dark:text-purple-400 mr-3 text-lg"
        >◆</span
      >
      {t("hobbies_piano", lang)}
    </li>
    <li class="flex items-center hover:translate-x-2 transition-transform">
      <span draggable="false" class="select-none text-cyan-500 dark:text-cyan-400 mr-3 text-lg"
        >◆</span
      >
      {t("hobbies_webdev", lang)}
    </li>
    <li class="flex items-center hover:translate-x-2 transition-transform">
      <span draggable="false" class="select-none text-purple-500 dark:text-purple-400 mr-3 text-lg"
        >◆</span
      >
      {t("hobbies_linux", lang)}
    </li>
    <li class="flex items-center hover:translate-x-2 transition-transform">
      <span draggable="false" class="select-none text-cyan-500 dark:text-cyan-400 mr-3 text-lg"
        >◆</span
      >
      {t("hobbies_typing_label", lang)}
      (      <a
        href="https://monkeytype.com/profile/Fravelz"
        target="_blank"
        rel="noreferrer noopener"
        class="text-cyan-600 dark:text-cyan-300 
               hover:text-cyan-700 dark:hover:text-white 
               underline underline-offset-2 decoration-dotted 
               transition-colors duration-200"
      >
        {t("hobbies_typing_link", lang)}
      </a>)
    </li>
  </ul>
</section>
