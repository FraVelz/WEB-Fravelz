---
import { getTranslations } from '@/utils/i18n';
import Parrafo from '@/components/ui/Parrafo.astro';
import SobreMiModalButton from '@/components/ui-react/SobreMiModalButton';

// Usar espa√±ol por defecto - el cambio se maneja con JavaScript
const t = getTranslations('es');
---

<section id="sobre-mi">
  <h2 class="text-center text-3xl font-bold mb-4 bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent" data-i18n="info_about_title">
    {t.info_about_title}
  </h2>
  
  <Parrafo className="text-slate-800 dark:text-gray-300 mb-4" data-i18n="about_intro_text">
    {t.about_intro_text}
  </Parrafo>

  <h3 class="text-xl font-semibold mb-3 text-slate-900 dark:text-gray-100" data-i18n="info_about_subtitle">{t.info_about_subtitle}</h3>

  <Parrafo className="text-slate-800 dark:text-gray-300 mb-4" data-i18n="about_history_text">
    {t.about_history_text}
  </Parrafo>

  <SobreMiModalButton client:load />

  <h3 class="text-xl font-semibold mb-3 text-slate-900 dark:text-gray-100" data-i18n="info_currently_subtitle">{t.info_currently_subtitle}</h3>
  <Parrafo className="text-slate-800 dark:text-gray-300" data-i18n="about_current_text">
    {t.about_current_text}
  </Parrafo>
</section>
