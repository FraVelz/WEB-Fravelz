---
import { getTranslations } from "@/utils/i18n";
import Parrafo from "@/components/ui/Parrafo.astro";

const t = getTranslations("es");
---

<section id="sobre-mi" class="space-y-8">
  <h2
    class="text-center text-3xl font-bold mb-6 bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent"
    data-i18n="info_about_title"
  >
    {t.info_about_title}
  </h2>

  <Parrafo
    className="text-slate-800 dark:text-gray-300"
    data-i18n="about_intro_text"
  >
    {t.about_intro_text}
  </Parrafo>

  <h3
    class="text-xl font-semibold mb-3 text-slate-900 dark:text-gray-100 flex items-center gap-2"
    data-i18n="info_about_subtitle"
  >
    <span
      class="flex-shrink-0 w-6 h-6 text-cyan-500 dark:text-cyan-400"
      aria-hidden="true"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25"
        ></path>
      </svg>
    </span>
    {t.info_about_subtitle}
  </h3>
  <Parrafo
    className="text-slate-800 dark:text-gray-300 mb-6"
    data-i18n="about_history_text"
  >
    {t.about_history_text}
  </Parrafo>

  <!-- InformaciÃ³n extra desplegable -->
  <details
    class="group rounded-xl border-2 border-cyan-700/60 dark:border-cyan-500/30 bg-cyan-50/50 dark:bg-gray-800/50 overflow-hidden"
  >
    <summary
      class="list-none cursor-pointer p-4 sm:p-5 flex items-center justify-between gap-3 text-cyan-800 dark:text-cyan-200 font-semibold hover:bg-cyan-100/50 dark:hover:bg-gray-700/50 transition-colors [&::-webkit-details-marker]:hidden"
    >
      <span class="flex items-center gap-2" data-i18n="about_modal_title">
        <span
          class="flex-shrink-0 w-5 h-5 text-cyan-500 dark:text-cyan-400"
          aria-hidden="true"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09z"
            ></path>
          </svg>
        </span>
        {t.about_modal_title}
      </span>
      <span
        class="flex-shrink-0 w-5 h-5 text-cyan-600 dark:text-cyan-400 transition-transform duration-200 group-open:rotate-180"
        aria-hidden="true"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m19.5 8.25-7.5 7.5-7.5-7.5"></path>
        </svg>
      </span>
    </summary>
    <div
      class="px-4 pb-4 sm:px-6 sm:pb-6 pt-0 space-y-6 border-t border-cyan-700/60 dark:border-cyan-500/30"
    >
      <div class="flex gap-4 text-slate-700 dark:text-gray-300 pt-4">
        <span
          class="flex-shrink-0 w-8 h-8 text-cyan-500 dark:text-cyan-400 mt-0.5"
          aria-hidden="true"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15.182 15.182a4.5 4.5 0 0 1-6.364 0M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0ZM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Z"
            ></path>
          </svg>
        </span>
        <Parrafo
          className="text-slate-800 dark:text-gray-300"
          data-i18n="about_modal_paragraph1"
        >
          {t.about_modal_paragraph1}
        </Parrafo>
      </div>

      <div class="flex gap-4 text-slate-700 dark:text-gray-300">
        <span
          class="flex-shrink-0 w-8 h-8 text-cyan-500 dark:text-cyan-400 mt-0.5"
          aria-hidden="true"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 4.5 4.5 4.5m-7.5-7 4.5 4.5 4.5 4.5"
            ></path>
          </svg>
        </span>
        <Parrafo
          className="text-slate-800 dark:text-gray-300"
          data-i18n="about_modal_paragraph2"
        >
          {t.about_modal_paragraph2}
        </Parrafo>
      </div>

      <div class="flex gap-4 text-slate-700 dark:text-gray-300">
        <span
          class="flex-shrink-0 w-8 h-8 text-cyan-500 dark:text-cyan-400 mt-0.5"
          aria-hidden="true"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-9.924 0 2.5 2.5 0 0 1 1.508 2.316v.192"
            ></path>
          </svg>
        </span>
        <Parrafo
          className="text-slate-800 dark:text-gray-300"
          data-i18n="about_modal_paragraph3"
        >
          {t.about_modal_paragraph3}
        </Parrafo>
      </div>

      <div class="flex gap-4 text-slate-700 dark:text-gray-300">
        <span
          class="flex-shrink-0 w-8 h-8 text-cyan-500 dark:text-cyan-400 mt-0.5"
          aria-hidden="true"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125"
            ></path>
          </svg>
        </span>
        <Parrafo
          className="text-slate-800 dark:text-gray-300"
          data-i18n="about_modal_paragraph4"
        >
          {t.about_modal_paragraph4}
        </Parrafo>
      </div>
    </div>
  </details>

  <h3
    class="text-xl font-semibold mb-3 text-slate-900 dark:text-gray-100 flex items-center gap-2"
    data-i18n="info_currently_subtitle"
  >
    <span
      class="flex-shrink-0 w-6 h-6 text-cyan-500 dark:text-cyan-400"
      aria-hidden="true"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0021 18V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25z"
        ></path>
      </svg>
    </span>
    {t.info_currently_subtitle}
  </h3>
  <Parrafo
    className="text-slate-800 dark:text-gray-300"
    data-i18n="about_current_text"
  >
    {t.about_current_text}
  </Parrafo>
</section>
