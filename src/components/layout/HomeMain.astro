---
// Component Line Divider
import Line from "@/components/ui/Line.astro";

// Imports Section
import Presentacion from "@/components/sections/PresentacionSection.astro";
import TecnologiasSection from "@/components/sections/TecnologiasSection.astro";
import ProyectosSection from "@/components/sections/ProyectosSection.astro";
import PasatiemposSection from "@/components/sections/PasatiemposSection.astro";
import SobreMiSection from "@/components/sections/SobreMiSection.astro";

// Import and configuration languages
import { getTranslations } from "@/utils/i18n";

// Use Spanish by default: the change is handled with JavaScript.
const t = getTranslations("es");
---

<div
  class="px-2 py-20 flex flex-col items-center sm:justify-center max-w-6xl"
>
  <Presentacion />

  <!-- Sección: Proyectos Principales de Desarrollo Web -->
  <ProyectosSection />

  <div
    id="horizontal-scroll"
    class="px-2 py-20 flex flex-col items-center gap-12 sm:justify-center max-w-6xl"
  >
    <!-- Sección: Tecnologías  -->
    <TecnologiasSection />

    <!-- Sección: Sobre Mí -->
    <SobreMiSection />

    <PasatiemposSection />
  </div>
</div>

<script type="module">
  import { horizontal_scroll } from "@/scripts-animations/horizontal-scroll";
  horizontal_scroll();
</script>
